<!DOCTYPE html>
<html lang="en" class="dark h-full">
    {{- /*gotype: github.com/joschahenningsen/TUM-Live/web.WatchPageData*/ -}}
    <head>
        <meta charset="UTF-8" />
        {{ $stream := .IndexData.TUMLiveContext.Stream }}
        {{ $course := .IndexData.TUMLiveContext.Course }}
        <title>{{ $course.Name }}: {{ $stream.Name }} | TUM Live</title>
        {{ template "headImports" .IndexData.VersionTag }}
        <script>
            window.HELP_IMPROVE_VIDEOJS = false;
        </script>
    <script src="/static/assets/ts-dist/watch.bundle.js?v={{.IndexData.VersionTag}}"></script>
        <link rel="stylesheet" href="/static/node_modules/video.js/dist/video-js.min.css" />
        <link rel="stylesheet" href="/static/node_modules/videojs-seek-buttons/dist/videojs-seek-buttons.css" />
        <link
            rel="stylesheet"
            href="/static/node_modules/videojs-hls-quality-selector/dist/videojs-hls-quality-selector.css"
        />
    </head>
    <body
        x-data="{'paused': {{ $stream.Paused }}, 'streamID': {{ $stream.Model.ID }}}"
        x-on:pausestart.window="paused=true"
        x-on:pauseend.window="paused=false"
        x-init="new watch.Watch(); watch.startWebsocket()"
    >
        {{ template "header" .IndexData.TUMLiveContext }}
        <div
            id="watchPageMainWrapper"
            class="w-full md:flex md:flex-nowrap md:justify-between"
            style="height: calc(100vh - 5rem)"
        >
            <input type="hidden" id="streamID" value="{{ $stream.Model.ID }}" />
            <div id="watchWrapper" class="h-fit grow overflow-x-hidden md:h-full">
                <noscript>
                    <p class="vjs-no-js">To view this video please enable JavaScript.</p>
                </noscript>
                <div id="watchContent" class="w-full">
                    <div
                        class="text-2 display-none w-full rounded-t border-t-4 border-indigo-700 bg-indigo-700 bg-opacity-20 font-semibold"
                        x-show="paused"
                        x-cloak
                    >
                        <i class="fas fa-info-circle"></i> This lecture is currently paused.
                    </div>
                </div>
                <div id="streamInfo" class="m-auto mx-5">
                    <div class="mt-4 flex justify-between align-middle">
                        <h1 class="text-4 grow text-xl" @titleupdate.window="$el.innerText=$event.detail.title">
                            {{ if $stream.Name }}
                                {{ $stream.Name }}
                            {{ else }}
                                Lecture:
                                {{ $stream.Start.Month }}
                                {{ printf "%02d." $stream.Start.Day }}
                                {{ $stream.Start.Year }}
                            {{ end }}
                        </h1>
                        <p class="text-4 flex text-lg">
                            {{ if not $stream.Recording }}
                                {{ if not $stream.LiveNow }}
                                    {{ if $stream.Ended }}
                                        {{/* When the stream ends its automatically reloaded, so this can be static */}}
                                        <span class="mr-2 flex">Stream has ended</span>
                                    {{ else }}
                                        <span class="mr-2 flex space-x-2">
                                            <span class="m-auto" id="viewerCount"></span>
                                            <span class="m-auto" id="ViewerDescText">Waiting</span>
                                            <span class="m-auto">&#183;</span>
                                            {{/* Timer / Countdown */}}
                                            <span
                                                class="text-4 flex text-lg"
                                                x-data="global.timer('{{ $course.GetNextLectureDateFormatted }}', true)"
                                                x-init="init();"
                                            >
                                                <template x-if="time().days !== '00'">
                                                    <span>More than a day left</span>
                                                </template>
                                                <template
                                                    x-if="time().days === '00' && time().minutes === '00' && time().hours === '00' && time().seconds === '00'"
                                                >
                                                    <span>Stream is due</span>
                                                </template>
                                                <template
                                                    x-if="time().days === '00' && !(time().minutes === '00' && time().hours === '00' && time().seconds === '00')"
                                                >
                                                    <span>
                                                        <span class="m-auto flex tabular-nums">
                                                            <span x-text="time().hours"></span>:
                                                            <span x-text="time().minutes"></span>:
                                                            <span x-text="time().seconds"></span>
                                                        </span>
                                                    </span>
                                                </template>
                                            </span>
                                            <span class="m-auto">&#183;</span>
                                        </span>
                                    {{ end }}
                                {{ else }}
                                    <span class="mr-2 flex space-x-2">
                                        <span class="m-auto" id="viewerCount"></span>
                                        <span class="m-auto" id="ViewerDescText">Watching</span>
                                        <span class="m-auto">&#183;</span>
                                    </span>
                                {{ end }}
                            {{ end }}
                            <span class="hidden md:inline-block">
                                {{ template "actions" . }}
                            </span>
                        </p>
                    </div>
                    <div class="flex justify-between border-b-2 pb-4 dark:border-secondary">
                        <a href="/course/{{ $course.Year }}/{{ $course.TeachingTerm }}/{{ $course.Slug }}">
                            <span class="text-5 hover:text-1 text-lg hover:underline">{{ $course.Name }}</span></a
                        >
                        {{ if $stream.LiveNow }}
                            {{ if .DVR }}
                                <a href="./{{ $stream.Model.ID }}"
                                    ><span class="text-5 hover:text-1 text-lg hover:underline"
                                        >Disable Beta stream</span
                                    ></a
                                >
                            {{ else }}
                                <a href="?dvr"
                                    ><span class="text-5 hover:text-1 text-lg hover:underline"
                                        >Enable Timeshift (beta)</span
                                    ></a
                                >
                            {{ end }}
                        {{ end }}
                    </div>
                    {{ if and .IsAdminOfCourse (and $stream.LectureHallID $stream.LiveNow) }}
                        <div class="mt-2 space-x-2 border-t-2 border-secondary p-4">
                            <h3 class="text-4 mb-2 font-bold">Stream actions</h3>
                            <button
                                @click="fetch(`/api/stream/${streamID}/pause?pause=${!paused}`).then(paused=!paused)"
                                href="#"
                                :title="paused?'End Pause (Turns on video and audio)':'Pause lecture (Turns off video and audio)'"
                                class="inline-block w-24 cursor-pointer rounded bg-green-500 p-2 text-center font-bold text-white hover:bg-green-600 dark:hover:bg-green-600"
                            >
                                <span x-show="!paused"><i class="fas fa-pause mr-1"></i>Pause</span>
                                <span x-show="paused"><i class="fas fa-play mr-1"></i>Resume</span>
                            </button>
                            <a href="?restart=1">
                                <button
                                    @click="window.location.reload()"
                                    href="?restart=1"
                                    title="Issues with the stream? Restart it."
                                    class="inline-block w-24 cursor-pointer rounded bg-indigo-500 p-2 text-center font-bold text-white hover:bg-indigo-600 dark:hover:bg-indigo-600"
                                >
                                    <i class="fas fa-redo mr-1"></i>Restart
                                </button>
                            </a>
                            <span
                                class="inline-block"
                                x-data="{ 'showModal': false }"
                                @keydown.escape="showModal = false"
                                x-cloak
                            >
                                <button
                                    @click="showModal = true"
                                    title="Already finished? End the stream early."
                                    class="inline-block w-24 cursor-pointer rounded bg-red-500 p-2 text-center font-bold text-white hover:bg-red-600 dark:hover:bg-red-600"
                                >
                                    <i class="fas fa-power-off mr-1"></i>Stop
                                </button>
                                <section class="flex h-full flex-wrap">
                                    <div
                                        class="overflow-auto"
                                        style="background-color: rgba(0,0,0,0.5)"
                                        x-show="showModal"
                                        :class="{ 'absolute inset-0 z-10 flex items-center justify-center': showModal }"
                                    >
                                        <div
                                            class="text-3 absolute left-1/2 top-1/2 mx-auto w-auto -translate-x-1/2 -translate-y-1/2 transform rounded bg-gray-200 py-4 px-6 text-left shadow-lg dark:bg-secondary md:max-w-md"
                                            x-show="showModal"
                                            @click.away="showModal = false"
                                        >
                                            <!--Title-->
                                            <div class="flex justify-between pb-3">
                                                <p class="text-2 font-bold">
                                                    Keep the recording after ending the stream?
                                                </p>
                                            </div>
                                            <!--Footer-->
                                            <div class="flex justify-start pt-2">
                                                <button
                                                    class="mr-3 inline-block w-24 cursor-pointer rounded bg-green-500 p-1 text-center font-bold text-white hover:bg-green-600 dark:hover:bg-green-600"
                                                    @click="fetch(`/api/stream/${streamID}/end?discard=${false}`).then(showModal = false)"
                                                >
                                                    Yes
                                                </button>
                                                <button
                                                    class="mr-3 inline-block w-24 cursor-pointer rounded bg-red-500 p-1 text-center font-bold text-white hover:bg-red-600 dark:hover:bg-red-600"
                                                    @click="fetch(`/api/stream/${streamID}/end?discard=${true}`).then(showModal = false)"
                                                >
                                                    No
                                                </button>
                                                <button
                                                    class="inline-block w-24 cursor-pointer rounded bg-gray-500 p-1 text-center font-bold text-white hover:bg-gray-600 dark:hover:bg-gray-600"
                                                    @click="showModal = false"
                                                >
                                                    Cancel
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </span>
                            {{ if .AlertsEnabled }}
                                <button
                                    @click="fetch(`/api/stream/${streamID}/issue`)"
                                    title="Issues with the stream? Send a report to the RGB."
                                    class="float-right inline-block w-auto cursor-pointer rounded bg-amber-500 p-2 text-center font-bold text-white hover:bg-amber-700 dark:hover:bg-amber-700"
                                >
                                    <i class="fas fa-exclamation-triangle mr-1"></i>Report Technical Problem
                                </button>
                            {{ end }}
                        </div>
                        <div class="p-4">
                            <h3 class="text-4 mb-2 font-bold">Presets for {{ .LectureHallName }}</h3>
                            <div class="scrollbarThin w-full overflow-x-scroll">
                                <div class="flex flex-row gap-x-2">
                                    {{ range $preset := .Presets }}
                                        <div style="min-width: 150px" class="group relative text-center">
                                            <img
                                                id="presetImage{{ $preset.LectureHallId }}-{{ $preset.PresetID }}"
                                                src="/public/{{ if $preset.Image }}
                                                    {{ $preset.Image }}
                                                {{ else }}
                                                    noPreset.jpg
                                                {{ end }}"
                                                alt="prev"
                                                width="150px"
                                            />
                                            <i
                                                onclick="watch.usePreset({{ $course.Model.ID }}, {{ $preset.LectureHallId }}, {{ $preset.PresetID }})"
                                                title="Switch to this preset"
                                                class="fas fa-exchange-alt absolute top-1 right-1 cursor-pointer rounded bg-info p-1 text-white opacity-0 group-hover:opacity-100"
                                            ></i>
                                        </div>
                                    {{ end }}
                                </div>
                            </div>
                        </div>
                    {{ end }}
                    <div class="mt-2 flex justify-between align-middle md:hidden">
                        {{ template "actions" . }}
                    </div>

                    <div
                        x-data="{descriptionlen: {{ len .Description }}, less: true}"
                        class="text-3 video-description py-4 lg:col-span-2"
                        x-show="descriptionlen > 0"
                    >
                        <h6 class="text-3 pb-3 font-bold">Video Description</h6>
                        <div
                            :class="less && 'truncate-children'"
                            @descriptionupdate.window="$el.innerHTML=$event.detail.description; descriptionlen=$event.detail.description.length"
                        >
                            {{ if .Description }}{{ .Description }}{{ end }}
                        </div>
                        <button
                            x-show="descriptionlen>128"
                            class="mt-2 text-xs uppercase text-gray-500 dark:text-gray-400"
                            @click="less = !less"
                            x-text="less ? 'show more' : 'show less'"
                        >
                            show less
                        </button>
                    </div>
                    <!-- Video Sections -->
                    {{ if $stream.VideoSections }}
                        {{ template "videosections" $stream }}
                    {{ end }}

                    {{ if .IsHighlightPage }}
                        <ul class="m-auto mb-4 w-full">
                            {{ template "course_list" .IndexData.TUMLiveContext }}
                        </ul>
                    {{ end }}
                </div>
            </div>
            {{ if $course.ChatEnabled }}
                <div
                    x-data="{show: $persist(false).as('chatOpen')}"
                    class="mt-5 md:mt-0"
                    :class="show ? 'w-full md:w-2/6 2xl:w-1/5 h-96 md:h-auto' : 'md:w-14 h-fit md:h-full'"
                >
                    {{ template "chat" .ChatData }}
                </div>
            {{ end }}
        </div>
<script>
    watch.initPlayer(true, false, false);
    {{if and $stream.Recording .IndexData.TUMLiveContext.User}}
    watch.watchProgress({{$stream.Model.ID}}, {{ .Progress.Progress }});
    {{end}}
    {{if $stream.Silences}}
    watch.skipSilence({{$stream.GetSilencesJson}});
    {{end}}
</script>
    </body>
</html>
